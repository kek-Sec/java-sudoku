package SudokuGenerator;

import java.util.ArrayList;
import java.util.Collections;

import javax.swing.JTextField;

public class GeneratorUtilities {
	
	//create list of unique numbers
	/*
	 * @param limit the max number
	 * @param how_many the amount of numbers
	 */
	@SuppressWarnings("deprecation")
	public static int[] getUniqueRandomNumbers(int limit,int how_many)
	{
		int[] to_return = new int[how_many];
		ArrayList<Integer> list = new ArrayList<Integer>();
        for (int i=1; i<limit; i++) {
            list.add(new Integer(i));
        }
        Collections.shuffle(list);
        for (int i=0; i<how_many; i++) {
        	to_return[i] = list.get(i);
        }
		return to_return;
		
	}
	
	//create Rows array
	public static int[][] makeRows(JTextField[] arr,int row_length)
	{
		//row[][] to return
		int result[][] = new int[arr.length][arr.length];
		
		int c = 0;
		int c2 = 0;
		while(c < arr.length)
		{
			for(int i=0;i<row_length;i++)
			{
				if(arr[c] == null) {break;}
				result[c2][i] = Integer.parseInt(arr[c].getText());
				c++;
			}
			c2 = 0;
		}
		return result;
		
	}
}
